{
	"compilerOptions": {
		"target": "es2015",
		"module": "es2015",
		"moduleResolution": "node",
		"jsx": "react",
		"reactNamespace": "app",
		"lib": ["dom", "esnext"],
		"experimentalDecorators": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"downlevelIteration": true,
		"allowJs": true,
		"outDir": "coverage/src",
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictBindCallApply": true,
		"strictPropertyInitialization": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"*": ["src/types/*"]
		},
		"typeRoots": [
			"./node_modules/@types",
			"./src/types"
		],
		"types": ["jest", "node"]
	},
	"include": [
		"src/**/*",
		"tests/**/*",
		"demo/**/*"
	]
}
